<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainAppBackground"
    android:padding="30dp"
    tools:context="dreamstarter.com.dreamstarter.IntroductionActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="285dp"
        android:layout_height="121dp"
        android:layout_marginTop="176dp"
        android:text="Welcome,\nPlease browse our offers, choose one and follow farther instructions.\n\nIt's easy."
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIntroduction"
        android:background="@color/colorButton"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</android.support.constraint.ConstraintLayout>
