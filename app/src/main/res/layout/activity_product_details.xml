<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="24sp"
        app:layout_widthPercent="80%"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrollviewDescription"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/tvItemName"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_widthPercent="20%"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/ivProductDetails"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/tvItemName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        app:layout_widthPercent="100%" />


    <Button
        android:id="@+id/btnDream"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_custom" />


    <ScrollView

        android:id="@+id/scrollviewDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProductDetails"
        android:layout_marginTop="20dp"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/scrollViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />




    </ScrollView>

</android.support.percent.PercentRelativeLayout>